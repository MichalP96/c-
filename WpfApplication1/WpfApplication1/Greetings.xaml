<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        Title="Greetings" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Height="38" Margin="90,52,0,0" TextWrapping="Wrap" Text="Select a message option and then choose the Display button" VerticalAlignment="Top" Width="328" Grid.Column="1"/>
        <RadioButton x:Name="radioButton" Grid.ColumnSpan="2" Content="Hello" HorizontalAlignment="Left" Margin="90,123,0,0" VerticalAlignment="Top" Width="95"/>
        <RadioButton x:Name="radioButton1" Grid.ColumnSpan="2" Content="Goodbye" HorizontalAlignment="Left" Margin="314,123,0,0" VerticalAlignment="Top" Width="104" Checked="radioButton2_Checked"/>
        <Button x:Name="button" Grid.ColumnSpan="2" Content="Display" HorizontalAlignment="Left" Margin="216,163,0,0" VerticalAlignment="Top" Width="75" Click="button_Click"/>

    </Grid>
</Window>
